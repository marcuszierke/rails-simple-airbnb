  <div class="banner-content">
  </div>
</div>
<div class="container">
  <div class="top">
    <h2><%= @flat.name %></h2>
    <p><%= @flat.address %></p>
  </div>
  <div class="middle">
    <h2>A bit more about this flat ...</h2>
    <p><%= @flat.description %></p>
  </div>
